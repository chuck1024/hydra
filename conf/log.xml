<logging>
    <filter enabled="false">
        <tag>stdout</tag>
        <type>console</type>
        <!-- level is (:?FINEST|FINE|DEBUG|TRACE|INFO|WARNING|ERROR) -->
        <level>DEBUG</level>
    </filter>

    <filter enabled="true">
        <tag>hydra</tag>
        <type>file</type>
        <level>DEBUG</level>
        <property name="filename">log/hydra.log</property>
        <!--
           %T - Time (15:04:05 MST)
           %t - Time (15:04)
           %D - Date (2006/01/02)
           %d - Date (01/02/06)
           %L - Level (FNST, FINE, DEBG, TRAC, WARN, EROR, CRIT)
           %S - Source
           %M - Message
           %c - Sec
           It ignores unknown format strings (and removes them)
           Recommended: "[%D %T] [%L] (%S) %M"
        -->
        <property name="format">%L	%D %T	%M	%S</property>
        <property name="rotate">true</property> <!-- true enables log rotation, otherwise append -->
        <property name="maxsize">0M</property> <!-- \d+[KMG]? Suffixes are in terms of 2**10 -->
        <property name="maxlines">0K</property> <!-- \d+[KMG]? Suffixes are in terms of thousands -->
        <property name="hourly">true</property> <!-- Automatically rotates when a log message is written after midnight -->
    </filter>

    <filter enabled="true">
        <tag>hydra_err</tag>
        <type>file</type>
        <level>WARNING</level>
        <property name="filename">log/hydra_err.log</property>
        <property name="format">%L	%D %T	%M	%S</property>
        <property name="rotate">true</property> <!-- true enables log rotation, otherwise append -->
        <property name="maxsize">0M</property> <!-- \d+[KMG]? Suffixes are in terms of 2**10 -->
        <property name="maxlines">0K</property> <!-- \d+[KMG]? Suffixes are in terms of thousands -->
        <property name="hourly">true</property> <!-- Automatically rotates when a log message is written after midnight -->
    </filter>
</logging>

